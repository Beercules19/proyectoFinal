{{#each @plays as |play|}}
		<div class = {{if (eq this.args.winner play.user_id) "winner"}}>
				<div class = "class">
						<img src = "https://cdn0.iconfinder.com/data/icons/avatar-profile/452/pikachu_pokemon_profile_avatar_people-512.png" alt="jejetl">

						<div  class = "margin">
								<p class = "boldText">User Id: {{play.user_id}}</p>
								<select onChange={{action this.onChange value="target.value"}} >
										<option value="" disabled selected hidden>Choose a value...</option>
										<option value="1">Rock</option>
										<option value="2">Paper</option>
										<option value="3">Scissors</option>
										<option value="4">Lizard</option>
										<option value="5">Spock</option>
								</select>

								<button class = "newInstance" {{action this.onSubmit play.user_id play.game_id play.id }} disabled={{if (not-eq this.args.status "STARTED") true}}>
										Submit!
								</button>
								{{#if (eq this.args.winner play.user_id)}}
										<p>Won</p>
								{{/if}}
						</div>
				</div>
		</div>
{{/each}}